@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "nav navbar-nav navbar-right" }))
    {
        @Html.AntiForgeryToken()
            <li>@Html.ActionLink("Профиль", "Index", "Manage")</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
    }
}
else
{
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Вход", "Login", "Account", routeValues: new { returnUrl = "/Home/Index" }, htmlAttributes: new { id = "loginLink" })</li>
}
