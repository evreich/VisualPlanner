@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
            <!--javascript с созданием новой задачи
            <li><a href="#"><span class="glyphicon glyphicon-plus"></span></a></li>-->
            <li>@Html.ActionLink("Профиль", "Manage", "Account")</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
    }
}
else
{
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Вход", "Login", "Account", routeValues: new { returnUrl = "/Organizer/Today" }, htmlAttributes: new { id = "loginLink" })</li>
}
