@model VisualPlanner.Models.VerifyPhoneNumberViewModel
@{
    ViewBag.Title = "Проверка номера телефона";
}

<div class="container">
    <br />
    <h1>@ViewBag.Title</h1>
    @using (Html.BeginForm("VerifyPhoneNumber", "Manage", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.Hidden("phoneNumber", @Model.PhoneNumber)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3>Введите проверочный код</h3>
        <h5>@ViewBag.Status</h5>
        <br />
        <div class="row">
            <div class="form-group col-sm-5">
                @Html.LabelFor(m => m.Code, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-2">
                <input type="submit" class="btn btn-success" value="Отправить" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
