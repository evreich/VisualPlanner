@model VisualPlanner.Models.AddPhoneNumberViewModel

<div class="container">
    <br />
    <h1>@ViewBag.Title</h1>
    @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3>Введите номер телефона</h3>
        <br />
        <div class="row">
            <div class="form-group col-sm-5">
                @Html.LabelFor(m => m.Number, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Number, new { @class = "form-control", @placeholder = "Например: +7(987) 654-32-11", @id = "phone" })
                @Html.ValidationMessageFor(m => m.Number, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-2">
                <input type="submit" class="btn btn-success" value="Отправить" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
