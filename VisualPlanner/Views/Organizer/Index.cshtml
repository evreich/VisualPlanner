@{
    ViewBag.Title = "Расписание задач";
    Layout = "/Views/Shared/_LayoutOrganizer.cshtml";
}
<div class="actions">
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#newTask"><i class="fa fa-plus"></i>&nbsp;&nbsp;Добавить задачу</button>
    &nbsp;&nbsp;
    <button type="button" class="btn btn-danger"><i class="fa fa-close"></i>&nbsp;&nbsp;Удалить задачу</button>
</div>
<div class="container-fluid well tasks-place">
    <h2>Место для графика</h2>
</div>

 <!-- NewTask modal-->
<div class="modal fade" id="newTask" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" style="color:white; opacity:1">&times;</button>
                <h4 class="modal-title">Отправка запроса</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="newTaskForm" method="post" action="/Home/Help">
                    <div class="form-group">
                        <label for="email">Введите ваш e-mail:</label>
                        <input type="email" class="form-control" id="email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="title">Тема запроса:</label>
                        <input type="text" class="form-control" id="title" name="title">
                    </div>
                    <div class="form-group">
                        <label for="comment">Описание:</label>
                        <textarea class="form-control" rows="5" id="comment" name="comment"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="clearForm(queryForm)">Отменить</button>
                <button type="submit" form="queryForm" class="btn btn-success pull-left">Отправить</button>
            </div>
        </div>

    </div>
</div>